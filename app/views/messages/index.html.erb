<%# 表示  %>
<div class="panel panel-default">
    <div class="panel-heading">
        <h1>メッセージ一覧</h1>
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>


<%# 入力 %>
<%= form_for(@message,html:{class:"form-horizontal"}) do |f| %>
<div class="panel panel-info">
    <div class="panel-heading">
        <div class="panel-title">
            入力
        </div>
    </div>
    <div class="panel-body">
        <% if @message.errors.present? %>
            <div class="alert alert-danger">
        <%= alert %>
                <ul>
        <% @message.errors.full_messages.each do |full_message| %>
                    <li>
        <%= full_message %>
                    </li>
        <% end %>
                </ul>
            </div>
        <% end %>
        <div class="form-group">
            <label for="message_name" class="col-sm-2 control-label">名前：</label>
            <div class="col-sm-9">
                <%= f.text_field :name, class:"form-control" %>  
            </div>
            <div class="col-sm-1"></div>
        </div>  
        <div class="form-group">
            <label for="message_body" class="col-sm-2 control-label">内容：</label>
            <div class="col-sm-9">
                <%= f.text_area :body, class:"form-control" %>
            </div>
            <div class="col-sm-1"></div>
        </div>
        <div class="col-sm-2"></div>
            <%= f.submit class:"btn btn-sm btn-primary col-sm-9" %>
        <div class="col-sm-1"></div>
    </div>
</div>
<% end %>