<%# 入力 %>
<%= form_for(@message,html:{class:"form-horizontal"}) do |f| %>
<div class="panel panel-info">
    <div class="panel-heading">
        <div class="panel-title">
            入力
        </div>
    </div>
    <div class="panel-body">
        <% if @message.errors.present? %>
            <div class="alert alert-danger">
            <%= alert %>
                <ul>
            <% @message.errors.full_messages.each do |full_message| %>
                    <li>
            <%= full_message %>
                    </li>
            <% end %>
                </ul>
            </div>
        <% end %>

        <div class="form-group">
            <!--<label for="message_name" class="col-sm-2 control-label">名前：</label>-->
            <div class="col-sm-1 ">
                <%= f.label :name, "名前", class: "control-label" %>
            </div>
            <div class="col-sm-9">
                <%= f.text_field :name, class: "form-control" %>  
            </div>
            <div class="col-sm-2"></div>
        </div>
        
        <div class="form-group">
            <!--<label for="message_body" class="col-sm-2 control-label">内容：</label>-->
            <div class="col-sm-1 ">
                <%= f.label :body, "内容", class: "control-label" %>
            </div>
            <div class="col-sm-9">
                <%= f.text_area :body, class: "form-control" %>
            </div>
            <div class="col-sm-2"></div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-1">
                <%=f.label :age, "年齢", class: "control-label" %>
            </div>
            <div class="col-sm-2">
                <%= f.text_field :age, :class => "form-control" %>
            </div>
            <div class="col-sm-9"></div>
        </div>
        

        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-9">
                <%= f.submit class: "btn btn-block btn-primary" %>
            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
</div>
<% end %>